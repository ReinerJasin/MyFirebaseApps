<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".Starter">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Home"
        app:titleTextColor="@color/color5" />

    <Button
        android:id="@+id/button_student"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_button_bg"
        android:drawableLeft="@drawable/ic_baseline_person_add_24"
        android:drawablePadding="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="button_student_clicked"
        android:paddingLeft="16dp"
        android:text="Add Student"
        android:textAlignment="textStart"
        android:textColor="@color/color5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/button_lecturer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_button_bg"
        android:drawableLeft="@drawable/ic_baseline_school_24"
        android:drawablePadding="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="button_lecturer_clicked"
        android:paddingLeft="16dp"
        android:text="Add Lecturer"
        android:textAlignment="textStart"
        android:textColor="@color/color5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_student" />

    <Button
        android:id="@+id/button_course"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_button_bg"
        android:drawableLeft="@drawable/ic_baseline_library_add_24"
        android:drawablePadding="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="button_course_clicked"
        android:paddingLeft="16dp"
        android:text="Add Course"
        android:textAlignment="textStart"
        android:textColor="@color/color5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_lecturer" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_button_bg"
        android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
        android:drawablePadding="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="button_login_clicked"
        android:paddingLeft="16dp"
        android:text="Student Login"
        android:textAlignment="textStart"
        android:textColor="@color/color5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_course" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/gradient" />

</androidx.constraintlayout.widget.ConstraintLayout>